module workflow.TypeSystemGenerator

import org.eclipse.emf.mwe.utils.*

var targetDir = "src-gen-ts"
var fileEncoding = "UTF-8"
var modelPath = "src/typesystem"

Workflow {

	component = DirectoryCleaner {
		directory = targetDir
	}

	component = org.eclipse.xtext.mwe.Reader {
		// lookup all resources on the classpath
		// useJavaClassPath = true

		// or define search scope explicitly
		path = modelPath

		// this class will be generated by the xtext generator 
		register = it.xtypes.TypeSystemStandaloneSetup {}
		load = {
			slot = "rules"
			type = "Rule"
		}
		load = {
			slot = "typesystemdefinition"
			type = "TypeSystemDefinition"
		}
	}

	component = org.eclipse.xpand2.Generator {
		expand = "xtypes::templates::Start::main FOREACH typesystemdefinition"
		outlet = {
			path = targetDir
			postprocessor = org.eclipse.xpand2.output.JavaBeautifier { }
		}
		fileEncoding = fileEncoding
	}

}
